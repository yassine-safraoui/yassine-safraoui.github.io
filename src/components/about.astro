---
import { marked } from "marked";
import profile from "../pages/_profile";

const about = {
	title: "About Me",
	content: (await marked(profile.about)).replaceAll(
		"<a ",
		"<a data-about-link ",
	),
	image: {
		src: "/me.png",
		alt: "Embedded systems icon",
	},
};

const hasImage = Boolean(about.image?.src);
---

<style>
  #about [data-about-image] img {
    filter: drop-shadow(0px -10px 30px rgba(15, 80, 100, 0.4));
  }

  #about [data-about-content] {
    font-size: 1.2rem;
    line-height: 2rem;
    font-weight: 500;
    opacity: 0.9;
    color: var(--text-color);
  }

  #about [data-about-content] p {
    margin: 0;
  }

  #about [data-about-content] ul {
    margin-top: 20px;
    padding: 0;
    list-style: none;
    overflow: hidden;
  }

  #about [data-about-content] li {
    position: relative;
    margin-bottom: 10px;
    display: flex;
    align-items: center;
    gap: 0.2rem;
    padding-left: 20px;
  }

  #about [data-about-content] li::before {
    content: "â€¢";
    color: var(--primary-color);
    font-size: 1.5rem;
    translate: 0 0.05rem;
  }

  #about [data-about-link] {
    display: inline-block;
    color: var(--text-link-color);
    /* text-decoration: none; */
  }

  #about [data-about-link]::after {
    content: "";
    display: block;
    width: 0;
    height: 2px;
    bottom: 0.37em;
    background-color: var(--primary-color);
    transition: all 0.25s cubic-bezier(0.645, 0.045, 0.355, 1);
    opacity: 0.5;
  }

  #about [data-about-link]:hover::after,
  #about [data-about-link]:focus::after,
  #about [data-about-link]:active::after {
    width: 100%;
  }
</style>

<section id="about" class="py-0 sm:py-5">
  <div
    class="prose prose-h1:mb-5 mx-auto w-full max-w-6xl bg-transparent px-3 sm:px-5"
  >
    <h1 class="bg-transparent text-center text-(--text-color)">
      {about.title}
    </h1>
    <div
      class="flex flex-col items-center justify-center gap-8 bg-transparent px-3 lg:flex-row lg:items-start lg:gap-12"
    >
      {
        hasImage ? (
          <div class="flex w-full justify-center lg:w-auto lg:flex-none lg:justify-center">
            <div class="w-2/3 max-w-md" data-about-image>
              <img
                src={about.image.src}
                class="mx-auto -rotate-1 border-0 bg-transparent p-0 select-none"
                alt={about.image.alt}
              />
            </div>
          </div>
        ) : null
      }
      <div
        class="w-full opacity-90 lg:flex-1"
        data-about-content
        set:html={about.content}
      />
    </div>
  </div>
</section>
