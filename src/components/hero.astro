---
import { Icon } from "astro-icon/components";

const hero = {
  intro: "Hi, my name is",
  title: "Yassine Safraoui.",
  subtitle:
    "I’m an Embedded Systems (SEOC) engineering graduate from Grenoble INP – Phelma. I’m seeking a permanent position as an embedded systems engineer.",
  subtitleLink: {
    href: "https://phelma.grenoble-inp.fr/en/studies/master-s-degree-in-engineering-grenoble-inp-phelma-embedded-systems-and-connected-devices-seoc#page-presentation",
    label: "SEOC",
  },
  resume: {
    href: "/Yassine_SAFRAOUI_CV.pdf",
    label: "Resume",
  },
  social: [
    {
      href: "https://github.com/yassine-safraoui",
      label: "GitHub",
      iconName: "simple-icons:github",
    },
    {
      href: "https://www.linkedin.com/in/yassine-safraoui-226993200",
      label: "LinkedIn",
      iconName: "simple-icons:linkedin",
    },
  ],
  image: {
    src: "/fav.png",
    alt: "",
  },
};
---

<style>
  #hero [data-hero-image] img {
    filter: drop-shadow(0px 8px 56px rgba(15, 80, 100, 0.16));
  }

  @keyframes fade-in {
    0% {
      opacity: 0;
    }
    100% {
      opacity: 1;
    }
  }

  @keyframes fade-left {
    0% {
      transform: translateX(-10px);
      opacity: 0;
    }
    100% {
      transform: translateX(0);
      opacity: 1;
    }
  }
</style>

<section id="hero" class="relative max-w-full py-5 pt-12">
  <div class="mx-auto w-full max-w-6xl px-3 sm:px-5 lg:px-5 lg:pt-3">
    <div class="flex flex-col gap-10 lg:flex-row lg:items-start">
      <div
        class="w-full animate-[fade-left_1s_ease-out]"
        id="primary-font"
        data-hero-content
        data-animate="left"
      >
        <span
          class="inline-block text-[clamp(14px,5vw,16px)] text-(--text-color) opacity-60"
          data-hero-subtitle
        >
          {hero.intro}
        </span>
        <h2
          class="mt-[0.2em] mb-[0.1em] text-[clamp(40px,8vw,80px)] text-(--primary-color)"
        >
          {hero.title}
        </h2>
        <h3
          class="text-[clamp(40px,8vw,60px)]/18 text-(--text-color) opacity-50 dark:text-white"
        >
          I’m an Embedded Systems (<a
            href={hero.subtitleLink.href}
            class="text-(--text-link-color) underline decoration-(--text-link-color)"
            data-hero-link
            target="_blank"
            rel="noreferrer">{hero.subtitleLink.label}</a
          >) engineering graduate from Grenoble INP – Phelma. I’m seeking a
          permanent position as an embedded systems engineer.
        </h3>
        <div class="mt-8 flex flex-wrap items-center gap-3">
          <a
            href={hero.resume.href}
            class="inline-block rounded-xl border border-(--primary-color) px-7 py-[0.7rem] text-(--text-color) transition-none hover:bg-(--secondary-color) hover:text-(--text-color) hover:opacity-90 focus:shadow-none"
            download
            target="_blank"
            rel="noreferrer"
          >
            {hero.resume.label}
          </a>
          <span class="flex items-center">
            {
              hero.social.map((item) => (
                <span class="px-1">
                  <a
                    href={item.href}
                    target="_blank"
                    rel="noreferrer"
                    class="inline-flex items-center justify-center rounded-full border border-(--primary-color) p-[0.7rem] leading-[0%] text-(--primary-color) transition-none hover:bg-(--background-color) hover:opacity-80"
                    aria-label={item.label.toLowerCase()}
                    title={item.label}
                  >
                    <Icon name={item.iconName} class="size-5" />
                  </a>
                </span>
              ))
            }
          </span>
        </div>
      </div>
      <div class="w-full lg:w-1/3">
        <div class="flex justify-center">
          <div
            class="px-5 pt-5 text-center md:w-3/4 lg:w-full lg:px-0"
            data-hero-image
            data-animate="fade"
          >
            <img
              src="/favicon.svg"
              class="mx-auto hidden w-[clamp(180px,28vw,280px)] animate-[fade-in_1s_ease-out] border-0 bg-transparent p-0 transition-shadow duration-300 hover:cursor-pointer hover:[box-shadow:0_0_11px_rgb(15_80_100/20%)] hover:filter-[contrast(1.2)] lg:block"
              alt="chip icon"
            />
          </div>
        </div>
      </div>
    </div>
  </div>
  <div
    class="absolute -bottom-12.5 -left-37.5 opacity-50 md:block"
    data-hero-bottom
  >
    <img src="/background-texture.svg" alt="" />
  </div>
</section>
